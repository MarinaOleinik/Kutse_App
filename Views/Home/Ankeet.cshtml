@model Kutse_App.Models.Guest


    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <p> Sisesta nimi: @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })</p>
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        <p> Sisesta email: @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })</p>
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        <p> Sisesta tel: @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })</p>
        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
        <p>
            Sinu valik:
            @Html.DropDownListFor(model => model.WillAttend,
           new[]
           {
               new SelectListItem() {Text="Tule kindlasti!", Value=bool.TrueString},
               new SelectListItem() {Text="Kahjuks ei saa tulla!", Value=bool.FalseString}
           }, "Vali siit")
        </p>
        @Html.ValidationMessageFor(model => model.WillAttend, "", new { @class = "text-danger" })
        <input type="submit" value="Saada vastus" />
    }


